@model MedicalResultsProject.Models.ChangePasswordModel

@{
    ViewBag.Title = "EditPassword";
}

<h2>Изменение информации</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Изменение пароля</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Старый пароль:</label>
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Новый пароль:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Повторите пароль:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RetryPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RetryPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <hr />

            <div class="col-md-offset-2 col-md-10">
                <div class="row g-2">
                    <div class="col-auto">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                    <div class="col-auto">
                        <a href="../Home/UserProfile" class="btn btn-danger">Отмена</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}