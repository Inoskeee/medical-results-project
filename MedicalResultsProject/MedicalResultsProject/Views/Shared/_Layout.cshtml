<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="..">Личный кабинет</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <!--Если пользователь вошел в систему будет доступна кнопка "Выйти", иначе доступны кнопки регистрации и авторизации-->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-item nav-link" href="/Home/UserProfile">Профиль</a>
                        <a class="nav-item nav-link" href="/Home/CheckStatistics">Статистика</a>
                        <a class="nav-item nav-link" href="/Account/Logoff">Выйти</a>
                    }
                    else
                    {
                        <a class="nav-item nav-link" href="/Account/Login">Вход</a>
                        <a class="nav-item nav-link" href="/Account/Register">Регистрация</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>
